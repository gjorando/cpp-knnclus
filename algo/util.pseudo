# tools

toss(tab*: array, iter: integer) # tosses an array iter times
begin
	for i in 1:iter do
	begin
		draw a,b two random numbers between 1 and length(tab)
		tmp <- tab[a]
		tab[a] <- tab[b]
		tab[b] <- tmp
	end
end

distance(p1, p2: EkNNPoint): real # determines the distance between two points
begin
	return sqrt((p2.x-p1.x)^2+(p2.y-p1.y)^2)
end

